}

def sceneExtract() {
    def sceneData = [:]

    logger('sceneExtract() DEVICE INFORMATION', 'debug')
    if (settings.goveeToken) {
    goveeHomeToken = "Bearer " + state.goveeHomeToken
    

    def params = [
            uri   : 'https://app2.govee.com',
            path  : '/bff-app/v1/exec-plat/home',
            headers: ['Authorization': goveeHomeToken, 'Content-Type': 'application/json', 'appVersion': '5.6.01'],
        ]
        logger("sceneExtract(): Calling HTTP server", 'error')
    try {
        httpGet(params) { resp ->
                resp.data.data.components.forEach {
                    name = it.name.toString()
                    logger("sceneExtract(): ${name}", 'error')
                    if (name == 'Default') {
                        logger("sceneExtract(): found default group moving forward", 'error')
                        it.oneClicks.iotRules.forEach {
                            devName= it.deviceObj.name
                            devSku= it.deviceObj.sku
                            logger("sceneExtract(): Looking at ${devName} ${devSku}", 'error')
                            rules = it.rule.toString()
                            logger("sceneExtract(): rule is ${rules}", 'error')
                            ruleSceneSub1=rules.indexOf('scenesStr')
                            ruleSceneSub2 = rules.substring(ruleSceneSub1)
                            ruleSceneSub3=ruleSceneSub2.indexOf('},')
                            ruleSceneSub4 = ruleSceneSub3-1
                            ruleScene = ruleSceneSub2.substring(12,ruleSceneSub4)
                            logger("sceneExtract(): Substring Name is ${ruleSceneSub3}: ${ruleScene}", 'error')                            
                            rules2 = rules.indexOf('command')                            
                            rulesSub = rules.substring(rules2)
                            rules3 = rulesSub.indexOf('transaction') - 3
                            logger("sceneExtract(): substring rule is ${rules2} ${rules3}", 'error')
                            rules5 = rulesSub.substring(9,rules3)
                            logger("sceneExtract(): substring rule is ${rules5}", 'error')
                           }
                    } else {
                    logger("sceneExtract(): Default group not found", 'error')
                    } 
                }
        }
    } catch (groovyx.net.http.HttpResponseException e) {
        logger("deviceSelect() Error: e.statusCode ${e.statusCode}", 'error')
        logger("deviceSelect() ${e}", 'error')

        return 'unknown'
    }
    }
    dynamicPage(name: 'sceneExtract', title: 'Scene Extract', uninstall: false, install: false, submitOnChange: true)
    {
        section('Govee Home Creds')
        {
            paragraph "Please provide your gove home token."
            href 'sceneExtract2', title: 'Govee Home Creds', description: 'Setup Gove Home Creds to obtain token'
            if (timeNow > state.goveeHomeExpiry) {
            paragraph "Token has expired. Please click the Govee HOme Creds button above to refresh"
            } else {
                paragraph "Token has valid"
            }
        }
        section('Extracted command below:') {
            paragraph "Device name ${devName}"
            paragraph "Scene name is ${ruleScene}"
            paragraph "Command is ${rules5}" 
            paragraph "This command will work with any device with model ${devSku}" 
        }
    
    }
}

def sceneExtract2() {
    
    logger('sceneExtract2() DEVICE INFORMATION', 'debug')
    if (settings.goveeEmail && settings.goveePassword) {
        if (timeNow > state.goveeHomeExpiry) {
            bodyParm = '{"email": '+settings.goveeEmail+', "password": '+settings.goveePassword+'}'
            logger("sceneExtract(): bodyparm to be passed:  ${bodyParm}", 'error')
            def params = [
                uri   : 'https://community-api.govee.com',
                path  : '/os/v1/login',
                headers: ['Content-Type': 'application/json'],
                body: bodyParm
            ]
            logger("sceneExtract(): parms to be passed:  ${params}", 'error')
            try {
                httpPost(params) { resp ->
                    status = resp.data.status.value
                    msg = resp.data.message.value
                    state.goveeHomeToken = resp.data.data.token.value.toString()
                    state.goveeHomeExpiry = resp.data.data.expiredAt.value
                    logger("sceneExtract(): Substring status is ${status}: Message ${msg}", 'error')
                    logger("sceneExtract(): token is ${state.goveeHomeToken} and expires at ${state.goveeHomeExpiry}", 'error')
                    }
                } catch (groovyx.net.http.HttpResponseException e) {
                    logger("deviceSelect() Error: e.statusCode ${e.statusCode}", 'error')
                    logger("deviceSelect() ${e}", 'error')

                return 'unknown'
            }        
        }
    }           
            
    dynamicPage(name: 'sceneExtract2', title: 'Govee Home Credentials', uninstall: false, install: false, submitOnChange: true)
    {
        section('Govee Home Creds')
        {
            paragraph "Please provide your gove home token."
            input 'goveeEmail', 'string', title: 'Please enter your Email used to log into Govee Home', required: true
            input 'goveePassword', 'password', title: 'Please enter your Govee Home password', required: true
        }
    }
}


