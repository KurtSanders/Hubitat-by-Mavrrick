def initialize() {
    state.loggingLevelIDE = (settings.configLoggingLevelIDE) ? settings.configLoggingLevelIDE.toInteger() : 3

    List child = getChildDevices()
    List childDNI = child.deviceNetworkId
    if (goveeDev) { 
        def  goveeAdd = settings.goveeDev - child.label 
    logger ("initialize() Child device ${child} DNI's ${childDNI}", "debug")
    logger ("initialize() Govee Light/Switch/Plugs to add ${goveeAdd}.","info")
    if (goveeAdd) {
         def devices = goveeAdd
         logger ("initialize() $devices are selcted to be integrated","info")
         logger ("initialize() DEVICE INFORMATION","info")
	     def params = [
            uri   : "https://developer-api.govee.com",
            path  : '/v1/devices',
			headers: ["Govee-API-Key": settings.APIKey, "Content-Type": "application/json"],
        ]
    


try {

			httpGet(params) { resp ->
                
//                logger (${resp.data},"debug")
				resp.data.data.devices.each{
					deviceID = it.device
					deviceModel = it.model
					deviceName = it.deviceName
                    controllable = it.controllable
                    retrievable = it.retrievable
                    supportCmds = it.supportCmds
                    if (supportCmds.contains("colorTem")) {
                    ctMin = it.properties.colorTem.range.min
                    ctMax = it.properties.colorTem.range.max 
                        }
                    else { 
                        ctMin = "N/A"
                        ctMax = "N/A" 
                         }
                    devices.findAll{it == deviceName} .each {
                            logger ("initialize()  configuring ${deviceName}","info")
                            addChildDevice("Mavrrick", "Govee Lights, Plugs, and Switches Driver", "${deviceID}" , location.hubs[0].id, [
					            "name": "Govee Light_Plug_Switch",
					            "label": deviceName,
                                'data': [
                                'deviceID': deviceID,
                                'deviceModel': deviceModel,
                                'retrievable': retrievable,
                                'apiKey': settings.APIKey,
                                'commands': supportCmds,
                                'ctMin': ctMin,
                                'ctMax': ctMax    
                            ],
					"completedSetup": true, 					
				])
			}
                    }
            //        }  
            }                                                          
	} catch (groovyx.net.http.HttpResponseException e) {
		logger ("initialize() Error: e.statusCode ${e.statusCode}","error")
		logger ("initialize() ${e}","error")
		
		return 'unknown'
	}
                state?.installDev = goveeDev
                logger ("initialize() Govee devices integrated","info")
                }
		}
      	else {
//       state?.crtVrtButton = false
		}
// add appliances
       if (goveeApp) { 
        def  goveeAdd2 = settings.goveeApp - child.label
         logger("initialize() Govee Appliances to add ${goveeAdd2}.","info")
        if (goveeAdd2) {
            def devices = goveeAdd2
    		logger ("initialize() $devices are selcted to be integrated","info")
            logger ("initialize() Appliance INFORMATION","info")
	     def params2 = [
            uri   : "https://developer-api.govee.com",
            path  : '/v1/appliance/devices',
			headers: ["Govee-API-Key": settings.APIKey, "Content-Type": "application/json"],
        ]
    


try {

			httpGet(params2) { resp ->

				//List each device assigned to current API key
 //               logger ("initialize()" + ${resp.data},"debug")
				resp.data.data.devices.each{
					deviceID = it.device
					deviceModel = it.model
					deviceName = it.deviceName
                    controllable = it.controllable
                    retrievable = it.retrievable
                    supportCmds = it.supportCmds
                    modes = it.properties.mode.options
                    if (supportCmds.contains("gear")) {
                        gear = it.properties.gear.options.value }
                    else { gear = "N/A"} 
					logger ("initialize() $deviceName	Address: $deviceID	Model: $deviceModel retrievable: $retrievable controllable: $controllable modes: $modes gears: $gear","debug")
                    devices.findAll{it == deviceName} .each {
                            logger ("initialize()  configuring ${deviceName}","info")
                            addChildDevice("Mavrrick", "Govee Appliance Driver", "${deviceID}" , location.hubs[0].id, [
					            "name": "Govee Appliance",
					            "label": deviceName,
                                'data': [
                                'deviceID': deviceID,
                                'deviceModel': deviceModel,
// Appliances are not retrieveable   'retrievable': retrievable,
                                'apiKey': settings.APIKey,
                                'commands': supportCmds,
                                'modes' : modes,
                                'gears' : gear
                            ],
					"completedSetup": true, 					
				])
			}
                    }      
            //        }  
            }                                                          
	} catch (groovyx.net.http.HttpResponseException e) {
		logger ("initialize() Error: e.statusCode ${e.statusCode}","error")
		logger ("initialize() ${e}","error")
		
		return 'unknown'
	}
                state?.installedApp = goveeApp
                logger ("initialize() Govee devices integrated","info")
                }
    }
      	else {
		}
    
}   


/*
	mainPage

	UI Page: Main menu for the app.
*/
def mainPage()
{
    List child = getChildDevices()
    def childCount = child.size()
//    if (isInstalled) {def maxPoll = 86400/((10000-(50*childCount))/childCount).toDouble()
//    maxPoll = maxPoll.round(1)}
//    DeviceInfo()
	dynamicPage(name: "mainPage", title: "Govee integration Main menu", uninstall: true, install: true, submitOnChange: true)
	{
		section("API Configuration  ")
		{
			paragraph "The Govee APi is required for this integration. Please obtain this value befor moving forward. You can obtain the Govee APi from the Govee Home app 'About Us' section."
            input "APIKey", "string", title: "Enter Your API Key", required: true
		}
	    section("Govee Device Add Page") {
			href "deviceSelect", title: "Device selection", description: "Select Govee devices to add to your environment"
	    }
        section("Govee Apliance Add Page") {
			href "deviceSelect2", title: "Device selection", description: "Select Govee devices to add to your environment"
	    }
        section("Current Integrated Device Information") {
            paragraph "There are ${childCount} devices integrated"
            paragraph "Your current integrated devices are ${child.label}"
                if (childCount > 0) {def maxPoll = 86400/((10000-(50*childCount))/childCount).toDouble()
                maxPoll = maxPoll.round(1)
            paragraph "With the number of devices have you can poll as frequently as every ${maxPoll} seconds"}
            paragraph "Your have ${state.dailyLimit} of your 10k Daily APIv1 Calls left."
            paragraph "Your have ${state.dailyAppLimit} of your 100 Daily APIv2 Calls left."
        }
        section("Logging Options") {
        input (
        		name: "configLoggingLevelIDE",
        		title: "IDE Live Logging Level:\nMessages with this level and higher will be logged to the IDE.",
        		type: "enum",
        		options: [
	        	    "0" : "None",
    	    	    "1" : "Error",
        		    "2" : "Warning",
        		    "3" : "Info",
        	    	"4" : "Debug",
	        	    "5" : "Trace"
    	    	],
        		defaultValue: "1",
            	displayDuringSetup: true,
	        	required: false
    	    )
        }
	}
}

def deviceSelect()
{
    def options = [:]
    
    logger ("deviceSelect() DEVICE INFORMATION","debug")
	     def params = [
            uri   : "https://developer-api.govee.com",
            path  : '/v1/devices',
			headers: ["Govee-API-Key": settings.APIKey, "Content-Type": "application/json"],
        ]
    


try {

			httpGet(params) { resp ->

				//List each device assigned to current API key
//                logger ("deviceSelect()" + ${resp.data},"debug")
				resp.data.data.devices.each{
					deviceID = it.device
//					deviceModel = it.model
					deviceName = it.deviceName
//                    controllable = it.controllable
//                    retrievable = it.retrievable
//                    ctMin = it.properties.colorTem.range.min
//                    ctMax = it.properties.colorTem.range.max
					logger ("deviceSelect() $deviceName	Address: $deviceID	Model: $deviceModel retrievable: $retrievable controllable: $controllable Color Temp: $ctMin Color Temp: $ctMax","debug")
                    options["${deviceName}"] = deviceName
//                    options.name = deviceName                    
				}
                logger (" deviceSelect() $options","debug")
			}
			
	} catch (groovyx.net.http.HttpResponseException e) {
		logger ("deviceSelect() Error: e.statusCode ${e.statusCode}","error")
		logger ("deviceSelect() ${e}","error")
		
		return 'unknown'
	} 

	dynamicPage(name: "deviceSelect", title: "Add Devices page", uninstall: false, install: false)
	{
		section("Please select the Lights, Plugs, Switch you want to integrate")
		{
            paragraph "Please select the devices you wish to integrate."    
            input(name: "goveeDev", type: "enum", required:false, description: "Please select the devices you wish to integrate.", multiple:true, 
			    options: options, width: 8, height: 1)
		}

	}
}

